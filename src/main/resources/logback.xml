<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %yellow(%M \(%class{0}.java:%line\)) - %msg%throwable%n</pattern>
        </encoder>
    </appender>

    <logger name="org.kusalainstitute" level="DEBUG"/>
    <logger name="org.flywaydb" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="com.deepl" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Local dev overrides (file absent on server = silently ignored) -->
    <include optional="true" file="${user.home}/.config/.logback-local.xml" />
</configuration>
